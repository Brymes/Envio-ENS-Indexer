{
  "compilerOptions": {
    "target": "es2020",
    //required for use with BigInt types
    "module": "commonjs",
    "lib": [
      "es6",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "rootDirs": [
      "src",
      "generated"
    ],
    "include": [
      "node_modules/@graphprotocol/graph-ts/index.ts",
      "node_modules/@graphprotocol/graph-ts/helper-functions.ts",
      "node_modules/@graphprotocol/graph-ts/global/global.ts",
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
